<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.duck.myboard.mapper.BoardMapper">
    <insert id="save" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO board (title, content, author)
        VALUES (#{title}, #{content}, #{author})
    </insert>

    <select id="findAll" resultType="com.duck.myboard.domain.Board">
        SELECT * FROM board
    </select>

    <select id="getOffsetPaging" resultType="com.duck.myboard.domain.Board">
        SELECT * FROM board
        ORDER BY id desc
        LIMIT 10 OFFSET 0
    </select>

    <select id="findById" resultType="com.duck.myboard.domain.Board">
        SELECT * FROM board WHERE id = #{id}
    </select>

    <update id="update">
        UPDATE board
        SET title = #{title},
            content = #{content}
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM board
        WHERE id = #{id}
    </delete>
</mapper>
